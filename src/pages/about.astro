---
import Hero from '@/components/hero.astro';
import Layout from '@/layouts/layout.astro';
import { Image } from 'astro:assets';
import MacbookCode from "@/assets/images/mohammad-rahmani-8qEB0fTe9Vw-unsplash.jpg";
import TechStack from '@/components/tech-stack/tech-stack.astro';

const bullets = [
    {
        title: 'GRC Engineering.',
        content: 'Implementing compliance as code and automating security controls.'
    },
    {
        title: "Technical Advisory.",
        content: "Strategic guidance for ISMS implementation (ISO 27001, TISAX).",
    },
    {
        title: "Asset-First Security.",
        content: "Identifying and protecting critical assets to reduce risk exposure."
    },
    {
        title: "Interim CTO / CISO.",
        content: "Leadership for engineering teams and security organizations."
    },
    {
        title: "Audits & Assessments.",
        content: "Evaluating security posture and readiness for certification."
    }
]

---

<Layout>
    <Hero
        subtitle='CTO & GRC Expert'
        heading="Julian KÃ¶hn"
        description="I bridge the gap between technical engineering and corporate governance. My mission is to help organizations build secure, compliant, and resilient systems without sacrificing velocity."
    />
    <section class="relative px-5vw w-full">
        <div class="max-w-8xl w-full">
            <div class="mx-auto max-w-2xl lg:max-w-none">
                <div class="lg:flex lg:items-center lg:justify-end">
                    <div class="flex justify-center lg:w-1/2 lg:justify-end lg:pr-12">
                        <div class="w-135 flex-none lg:w-180">
                            <div class="justify-center lg:justify-end relative flex aspect-719/680 w-full grayscale">
                                <Image
                                    src={MacbookCode}
                                    alt="Macbook with code"
                                    class="object-cover object-center w-full h-full rounded-lg"
                                    width={655}
                                />
                            </div>
                        </div>
                    </div>
                    <div>
                        <ul
                            role="list"
                            class="text-base text-muted-foreground mt-16 lg:mt-0 lg:w-1/2 lg:min-w-132 lg:pl-4 font-sans"
                        >
                        {bullets.map((bullet) => (
                            <li class="group mt-10 first:mt-0">
                                <div
                                    class="pt-10 group-first:pt-0 group-first:before:hidden group-first:after:hidden relative before:absolute after:absolute before:bg-neutral-950 after:bg-neutral-950/10 before:left-0 before:top-0 before:h-px before:w-6 after:left-8 after:right-0 after:top-0 after:h-px"
                                >
                                    <strong class="font-semibold text-secondary font-serif text-lg block mb-2">
                                        {bullet.title}{" "}
                                    </strong>
                                    {bullet.content}
                                </div>
                            </li>
                        ))}
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="relative px-5vw py-24">
        <div class="max-w-2xl mx-auto text-center">
            <h2 class="text-3xl font-bold tracking-tight text-secondary sm:text-4xl font-serif">
                Why partner with me?
            </h2>
            <p class="mx-auto mt-6 max-w-xl text-lg leading-8 text-muted-foreground font-sans">
                My passion for asset-first security and engineering excellence drives me to find the most effective solutions. I don't just advise; I build the systems that secure your future.
            </p>
        </div>
    </section>
</Layout>