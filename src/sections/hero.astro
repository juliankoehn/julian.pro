---
import Julian from "@/assets/images/network.png"
import Link from '@/components/link.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
---

<section class="relative min-h-[90vh] flex items-center pt-32 lg:pt-0">
    <!-- Animated Aurora Background -->
    <div class="absolute inset-0  pointer-events-none">
        <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-primary/20 blur-[120px] rounded-full animate-pulse-slow"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-secondary/10 blur-[120px] rounded-full animate-pulse-slow" style="animation-delay: 2s;"></div>
        <div class="absolute top-[20%] right-[20%] w-[30%] h-[30%] bg-blue-900/10 blur-[100px] rounded-full animate-pulse-slow" style="animation-delay: 4s;"></div>
    </div>

    <!-- Noise Texture Overlay -->
    <div class="absolute inset-0 opacity-[0.03] pointer-events-none" style="background-image: url('/noise.png');"></div>

    <div class="px-5vw max-w-8xl mx-auto relative z-10 w-full">
        <div class="grid lg:grid-cols-12 gap-12 lg:gap-8 items-center">
            
            <!-- Text Content -->
            <div class="lg:col-span-7 flex flex-col justify-center text-center lg:text-left pt-10 lg:pt-0">
                <!-- Badge -->
                <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-white/10 bg-white/5 backdrop-blur-md mb-8 mx-auto lg:mx-0 w-fit animate-fade-in-up" style="animation-delay: 0.1s;">
                    <span class="relative flex h-2 w-2">
                      <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-500 opacity-75"></span>
                      <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
                    </span>
                    <span class="text-xs font-bold text-white tracking-[0.2em] uppercase">Available for Discovery</span>
                </div>

                <!-- Headline -->
                <h1 class="font-serif font-bold text-white text-6xl sm:text-8xl lg:text-[7rem] tracking-tighter leading-[0.9] mb-8 animate-fade-in-up" style="animation-delay: 0.2s;">
                    Asset-First <br />
                    <span class="bg-gradient-to-r from-secondary via-white to-secondary bg-clip-text text-transparent bg-[length:200%_auto] animate-shimmer">
                        Security.
                    </span>
                </h1>
                
                <!-- Subheadline -->
                <p class="text-xl lg:text-2xl text-foreground/70 leading-relaxed font-sans max-w-2xl mx-auto lg:mx-0 mb-12 animate-fade-in-up" style="animation-delay: 0.3s;">
                    Stop chasing checkboxes. Start engineering resilience. <br />
                    I help organizations transform GRC from a blocker into a competitive advantage.
                </p>

                <!-- Buttons -->
                <div class="flex flex-col sm:flex-row gap-6 justify-center lg:justify-start animate-fade-in-up" style="animation-delay: 0.4s;">
                     <Link variant="primary" href="/contact" class="px-8 py-3 text-sm !bg-white !text-black hover:!bg-gray-200 uppercase tracking-widest font-bold">
                        Start Engineering Trust
                    </Link>
                    <a href="https://linkedin.com/in/julian-koehn" target="_blank" class="align-middle select-none font-sans font-bold text-center uppercase transition-all text-xs py-3 px-6 rounded-lg w-fit leading-normal text-white bg-[#0A66C2] hover:bg-[#004182] flex items-center gap-2 group">
                        <Icon name="mdi:linkedin" class="w-5 h-5" />
                        <span class="group-hover:scale-105 transition-transform">Connect on LinkedIn</span>
                    </a>
                </div>
            </div>

            <!-- Image Composition -->
            <div class="lg:col-span-5 relative animate-fade-in-up lg:h-[80vh] flex items-end" style="animation-delay: 0.5s;">
                <div class="relative w-full h-[500px] lg:h-full rounded-2xl overflow-hidden ring-1 ring-white/10 group grayscale hover:grayscale-0 transition-all duration-700 ease-out">
                    <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] via-transparent to-transparent z-10 opacity-80"></div>
                     <Image
                        src={Julian}
                        alt="Julian Koehn - GRC Engineering"
                        class="object-cover w-full h-full scale-100 group-hover:scale-105 transition-transform duration-1000"
                        width={900}
                        loading="eager"
                    />
                    
                    <!-- Floating Data Card -->
                    <div class="absolute bottom-8 left-8 right-8 z-20 p-6 bg-black/40 backdrop-blur-xl border border-white/10 rounded-xl transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500 delay-100">
                        <div class="flex items-center gap-4 mb-3">
                             <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center">
                                <Icon name="mdi:domain" class="w-6 h-6 text-primary" />
                             </div>
                             <div>
                                 <div class="text-white font-bold font-serif">Kopexa</div>
                                 <div class="text-xs text-secondary uppercase tracking-wider">Founder & CTO</div>
                             </div>
                        </div>
                        <div class="flex justify-between text-xs text-foreground/60 mb-1 font-sans">
                            <span>GRC Automation</span>
                            <span>Active</span>
                        </div>
                        <div class="h-1 w-full bg-white/10 rounded-full overflow-hidden">
                            <div class="h-full bg-primary w-full"></div>
                        </div>
                    </div>
                </div>
                
                 <!-- Floating Decorative Elements -->
                 <div class="absolute -top-12 -right-12 w-32 h-32 bg-gradient-to-br from-primary/20 to-secondary/20 blur-2xl rounded-full animate-bounce-slow delay-700"></div>
            </div>

        </div>
    </div>
</section>