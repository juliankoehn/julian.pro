---
import { Image } from 'astro:assets';

type Image = {
    url: string;
    alt: string;
}

export interface Props {
    title: string;
    url: string;
    date?: string | Date;
    image?: {
        url: {
            height: number;
            src: string;
            width: number;
            format: "svg" | "png" | "jpg" | "jpeg" | "tiff" | "webp" | "gif" | "avif";
        };
        alt: string;
    } | undefined;
}

const { title, url, date, image } = Astro.props;
---

<a href={url} class="rounded-xl bg-white border-2 border-black shadow-fill group flex flex-col overflow-hidden transition-transform hover:scale-105 hover:-rotate-1">
    <div class="aspect-video rounded-lg">
        {image && (
            <Image class="object-cover object-center w-full" src={image.url} alt={image.alt} width={400} height={500} />
        )}
    </div>
    <div class="px-6 py-4 border-t border-black flex flex-col justify-between flex-1">
        <h3 class="font-medium text-2xl md:text-3xl text-black dark:text-white">
            {title}
        </h3>
        {date && (
            <p>
                {new Date(date).toLocaleDateString()}
            </p>
        )}
    </div>
</a>
