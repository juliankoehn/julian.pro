---
import { Icon } from "astro-icon/components";

const logos = [
    { name: "Kopexa", icon: "mdi:shield-check" }, 
    // Add real social proof here when available
];
---
<section class="w-full py-12 border-y border-white/10">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <h2 class="text-center text-sm font-semibold leading-8 text-gray-300 uppercase tracking-widest font-sans">
            Trusted by security leaders at
        </h2>
        <div class="mx-auto mt-10 grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 lg:mx-0 lg:max-w-none lg:grid-cols-4">
            {logos.map(logo => (
                 <div class="col-span-2 max-h-12 w-full object-contain lg:col-span-1 flex justify-center items-center gap-2 text-gray-400 grayscale hover:grayscale-0 transition-all duration-300 hover:text-primary">
                    <Icon name={logo.icon} class="h-8 w-8" />
                    <span class="text-xl font-serif font-bold">{logo.name}</span>
                 </div>
            ))}
        </div>
    </div>
</section>
