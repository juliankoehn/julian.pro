---
import { Icon } from "astro-icon/components";
import Link from './link.astro';
import CoWorkingImage from "@/assets/images/coworking.jpg"
import { Image, Picture } from 'astro:assets';
---


<div class="relative w-full border-t border-white/5 mt-32">
    <!-- Ambient Glow -->
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[400px] bg-primary/10 blur-[120px] rounded-full pointer-events-none"></div>

    <!-- Marquee Ticker -->
    <div class="relative w-full py-8 border-b border-white/5 overflow-hidden flex">
        <div class="animate-marquee whitespace-nowrap flex gap-16 items-center text-foreground/20 font-serif font-bold text-4xl uppercase tracking-widest select-none">
            <span>Engineering Trust</span>
            <span>•</span>
            <span>ISO 27001</span>
            <span>•</span>
            <span>TISAX</span>
            <span>•</span>
            <span>SOC 2</span>
            <span>•</span>
            <span>Risk Management</span>
            <span>•</span>
            <span>Compliance as Code</span>
            <span>•</span>
            <span>Engineering Trust</span>
            <span>•</span>
            <span>ISO 27001</span>
            <span>•</span>
            <span>TISAX</span>
            <span>•</span>
            <span>SOC 2</span>
            <span>•</span>
            <span>Risk Management</span>
            <span>•</span>
            <span>Compliance as Code</span>
        </div>
    </div>

    <div class="w-full mx-auto max-w-8xl px-6 lg:px-8 py-24 relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 mb-24">
            <!-- Massive CTA -->
            <div>
                <h2 class="text-6xl md:text-8xl font-serif font-bold text-white tracking-tight leading-[0.9]">
                    Secure <br />
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-white/50">The Future.</span>
                </h2>
                <p class="mt-8 text-xl text-muted-foreground max-w-lg font-sans leading-relaxed">
                    Ready to transform compliance from a blocker into a business accelerator? Let's engineer a resilient foundation for your growth.
                </p>
                <div class="mt-10">
                    <Link href="/contact" class="px-8 py-4 text-lg">
                        Start the Conversation
                    </Link>
                </div>
            </div>

            <!-- Bento Grid Navigation -->
            <div class="grid grid-cols-2 md:grid-cols-3 gap-8 lg:gap-12">
                <!-- Sitemap -->
                <div class="flex flex-col gap-6">
                    <h3 class="text-sm font-sans font-bold uppercase tracking-widest text-primary">Sitemap</h3>
                    <ul class="flex flex-col gap-4">
                        <li><a href="/" class="text-foreground/60 hover:text-white transition-colors duration-300 font-serif text-lg">Home</a></li>
                        <li><a href="/about" class="text-foreground/60 hover:text-white transition-colors duration-300 font-serif text-lg">About</a></li>
                        <li><a href="/cases" class="text-foreground/60 hover:text-white transition-colors duration-300 font-serif text-lg">Cases</a></li>
                        <li><a href="/blog" class="text-foreground/60 hover:text-white transition-colors duration-300 font-serif text-lg">Insights</a></li>
                    </ul>
                </div>

                <!-- Services -->
                <div class="flex flex-col gap-6">
                    <h3 class="text-sm font-sans font-bold uppercase tracking-widest text-primary">Services</h3>
                    <ul class="flex flex-col gap-4">
                        <li><a href="/leistungen" class="text-foreground/60 hover:text-white transition-colors duration-300 font-serif text-lg">Consulting</a></li>
                        <li><a href="/leistungen" class="text-foreground/60 hover:text-white transition-colors duration-300 font-serif text-lg">ISMS Implementation</a></li>
                        <li><a href="/leistungen" class="text-foreground/60 hover:text-white transition-colors duration-300 font-serif text-lg">Audits</a></li>
                        <li><a href="/leistungen" class="text-foreground/60 hover:text-white transition-colors duration-300 font-serif text-lg">Workshops</a></li>
                    </ul>
                </div>

                <!-- Connect -->
                <div class="flex flex-col gap-6">
                    <h3 class="text-sm font-sans font-bold uppercase tracking-widest text-primary">Connect</h3>
                    <ul class="flex flex-col gap-4">
                        <li>
                            <a href="https://www.linkedin.com/in/julian-koehn/" target="_blank" class="flex items-center gap-2 text-foreground/60 hover:text-[#0077b5] transition-colors duration-300 font-serif text-lg group">
                                <Icon name="mdi:linkedin" class="w-5 h-5 group-hover:scale-110 transition-transform" />
                                LinkedIn
                            </a>
                        </li>
                        <li>
                            <a href="https://github.com/juliankoehn" target="_blank" class="flex items-center gap-2 text-foreground/60 hover:text-white transition-colors duration-300 font-serif text-lg group">
                                <Icon name="mdi:github" class="w-5 h-5 group-hover:scale-110 transition-transform" />
                                GitHub
                            </a>
                        </li>
                        <li>
                            <a href="mailto:me@julian.pro" class="flex items-center gap-2 text-foreground/60 hover:text-primary transition-colors duration-300 font-serif text-lg group">
                                <Icon name="mdi:email" class="w-5 h-5 group-hover:scale-110 transition-transform" />
                                Email Me
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Footer Bottom -->
        <div class="pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-6">
            <div class="flex items-center gap-4">
               <div class="w-10 h-10 rounded-full bg-gradient-to-br from-white/10 to-transparent border border-white/10 flex items-center justify-center">
                    <span class="font-serif font-bold text-white">J</span>
               </div>
               <span class="text-sm text-foreground/40 font-sans">
                   © {new Date().getFullYear()} Julian Koehn. All rights reserved.
               </span>
            </div>

            <div class="flex gap-8">
                <a href="/impressum" class="text-sm text-foreground/40 hover:text-white transition-colors font-sans uppercase tracking-wider">Imprint</a>
                <a href="/datenschutz" class="text-sm text-foreground/40 hover:text-white transition-colors font-sans uppercase tracking-wider">Privacy</a>
            </div>
        </div>
    </div>
</div>
