---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";

export const button = cva([
  "shadow-fill w-fit transition-all py-4 px-12 leading-normal font-semibold font-mono text-foreground",
  "border-2 border-foreground rounded-lg",
]);

export interface Props
  extends HTMLAttributes<"a">,
    VariantProps<typeof button> {}

const { class: className, ...restProps } = Astro.props;
---

<a
  class={button({
    class: className,
  })}
  {...restProps}
>
  <slot />
</a>
