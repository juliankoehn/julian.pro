---
import cx from 'clsx'
import type { Case } from '@/content/config'
import Icon from 'astro-icon';
import Link from './link.astro';

export type Props = {
    item: Case
    url: string
}

const { item, url } = Astro.props;
---

<div class={cx(
    'grid grid-cols-3 gap-x-8 gap-y-8 pt-16 relative',
    'before:absolute after:absolute before:bg-gray-950 after:bg-gray-950/10 before:left-0 before:top-0',
    'before:h-[2px] before:w-8 after:left-8 after:right-0 after:top-0 after:h-[2px]',
    'w-full',
    'relative flex flex-col bg-clip-border overflow-hidden',
)}>
    <div class="col-span-full sm:flex sm:items-center sm:justify-between sm:gap-x-8 lg:col-span-1 lg:block">
        <div class="sm:flex sm:items-center sm:gap-x-6 lg:block">
            <Icon name="ph:question" class="h-10 w-10 bg-gray-950 rounded-full text-white" />
            <h3 class="mt-6 text-sm font-semibold text-gray-950 sm:mt-0 lg:mt-8">
                {item.kunde}
            </h3>
        </div>
        <div class="mt-1 flex gap-x-4 sm:mt-0 lg:block">
            <p class="text-sm tracking-tight text-gray-950 after:ml-4 after:font-semibold after:text-gray-300 after:content-['/'] lg:mt-2 lg:after:hidden">
                {item.tags.join(", ")}
            </p>
            <p class="text-sm text-gray-950 lg:mt-2">
                {item.laufzeit}
            </p>
        </div>
    </div>
    <div class="col-span-full lg:col-span-2 lg:max-w-2xl">
        <p class="font-display text-4xl font-medium text-gray-950">
            {item.title}
        </p>
        <div class="mt-6 space-y-6 text-base text-gray-600">
            {item.description}
        </div>
        <div class="mt-8 py-2 flex">
            <Link 
                aria-label={`Read case study: ${item.title}`} href={url}>
                <span class="relative top-px">Read case study</span>
            </Link>
        </div>
    </div>
</div>